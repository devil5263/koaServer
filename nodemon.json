{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "public",
    "package.json",
    "Dockfile",
    "docker-compose.yml",
    "app.log",
    "reptile.log",
    "README.md",
    "app.*.log",
    "reptile.*.log"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony-async-await"
  },
  "watch": ["*.*"],
  "env": {
    "NODE_ENV": "dev"
  },
  "ext": "js,json"
}